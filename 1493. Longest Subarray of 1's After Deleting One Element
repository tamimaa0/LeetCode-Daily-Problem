class Solution {
public:
    int longestSubarray(vector<int>&v) {
        
        int ans = -1 ;

        v.insert(v.begin(), -1);

        int l=  1 ,r = 1 ;

        int cnt =0 ;
        int ind =0;
        
        queue<int>q;


        while(l<v.size() and r<v.size()){

            
            if(v[r]==0){
                q.push(r);
                cnt++;
            
            }

            if(cnt ==2){
                
                l = q.front()+1;
                q.pop();
                cnt = 1;
            }

            //cout<<l<<" "<<r<<endl;
            ans = max(ans, r-l);
            r++;



        }

        return ans ;


        return 0;

    }
};
