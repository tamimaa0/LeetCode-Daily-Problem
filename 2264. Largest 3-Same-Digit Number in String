class Solution {
public:
    string largestGoodInteger(string num) {
        
        char a = '0';
        int cnt =1,maxi = 0;

        for(int i=1; i<num.size(); i++){
            if(num[i]==num[i-1]){
                 cnt++;
            }
               
            else 
            {
                if(cnt >=3 ){
                    
                    if(num[i-1]>=a){
                        maxi = cnt ;
                        a = num[i-1];
                    }
                    
                    
                }
                cnt =1;
            }    
        }
        if(cnt >=3 ){
                    
                    if(num[num.size()-1]>=a){
                        maxi = cnt ;
                        a = num[num.size()-1];
                    }
        }
        
        string b ="";

        for(int i =1; i<=min(3, maxi) ; i++)
            b+=a;

        return b;    
    }
};
