class Solution {
public:
    bool isPowerOfThree(int n) {
       if (n<=0 || n==-1){
        return false ;
       }
        n = abs(n);

       while(n>1){
        if(n%3 != 0){          
            return false ;
        }
        n/=3;
       } 
       
       if(n==1)
       return true ;

       return false ; 
       
    }
};
